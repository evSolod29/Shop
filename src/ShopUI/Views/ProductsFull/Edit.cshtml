@model Shared.DTO.DTO.Products.CreateProduct

@{
    ViewData["Title"] = "Edit";
}

<h4>Редактирование продукта</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" onkeypress="return formatInput(event, this)" />
            </div>
            <div class="form-group">
                <label asp-for="CommonNote" class="control-label"></label>
                <input asp-for="CommonNote" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="AdditionalNote" class="control-label"></label>
                <input asp-for="AdditionalNote" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="form-group">
                    <p class="text-danger">@ViewBag.Error</p>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>
